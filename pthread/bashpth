#!/bin/bash
# Script to compile and execute a c program in one step.



numA=100
numB=10000
numL=1000
numT=4

# Compile the program with -o option to specify the name of the binary
gcc          -o ham hamming.c 
gcc -pthread -o pth_1 pthreads1.c
gcc -pthread -o ptt_2 pthreads2.c
gcc -pthread -o pt_3 pthreads3.c


# If there were no compilation errors, run the program
echo "-------------------------------------------------------------------------------------------------------"
echo "*********************************************************"
echo "******************** SERIAL PROGRAM *********************"
echo "*********************************************************"
./ham <<EOF

$numA

$numB

$numL

EOF


echo "-------------------------------------------------------------------------------------------------------"
echo "*********************************************************"
echo "******************** PTHREADS - TASK1 *********************"
echo "*********************************************************"
 ./pth_1 <<EOF

$numA

$numB

$numL

$numT

EOF
echo "-------------------------------------------------------------------------------------------------------"
echo "*********************************************************"
echo "******************** PTHREADS - TASK2 *********************"
echo "*********************************************************"
 ./ptt_2 <<EOF

$numA

$numB

$numL

$numT

EOF
echo "-------------------------------------------------------------------------------------------------------"
echo "*********************************************************"
echo "******************** PTHREADS - TASK3 *********************"
echo "*********************************************************"
 ./pt_3 <<EOF

$numA

$numB

$numL

$numT

EOF

#./EXECtask3 <<< "$numA $numB $numL $numT"
